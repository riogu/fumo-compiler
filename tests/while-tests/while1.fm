fn printf(format: char*, ...) -> i32;

// Test 1: Basic while loop with simple condition
fn test_basic_while() -> void {
    let i: i32 = 0;
    while i < 3 {
        printf("i = %d\n", i);
        i = i + 1;
    }
    printf("Final i = %d\n", i);  // Should be 3
}

// Test 2: While loop that never executes
fn test_false_condition() -> void {
    let executed: bool = false;
    while false {
        executed = true;
        printf("This should never print\n");
    }
    if executed {
        printf("Never executed: %s\n", "true");
    } else {
        printf("Never executed: %s\n", "false");
    }
}


fn main() -> i32 {
    printf("=== While Loop Tests ===\n");
    
    printf("\n--- Test 1: Basic While ---\n");
    test_basic_while();
    return 0;
    
