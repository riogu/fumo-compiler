}

fn test_operator_characters() -> void {
    printf("\n=== Testing Operator Character Literals ===\n");
    
    let plus: i8 = '+';
    let minus: i8 = '-';
    let multiply: i8 = '*';
    let divide: i8 = '/';
    let modulo: i8 = '%';
    let equals: i8 = '=';
    let less_than: i8 = '<';
    let greater_than: i8 = '>';
    
    printf("Operators: %c%c%c%c%c%c%c%c\n",
